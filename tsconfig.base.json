{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@mfe-workspace/shared-ui": ["libs/shared/ui/src/index.ts"],
      "@mfe-workspace/shared-styles": ["libs/shared/styles/src/index.ts"],
      "@mfe-workspace/shared-services": ["libs/shared/services/src/index.ts"],
      "@mfe-workspace/shared-i18n": ["libs/shared/i18n/src/index.ts"],
      "@mfe-workspace/shared-mocks": ["libs/shared/mocks/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
